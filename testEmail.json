import nodemailer from "nodemailer";

// Create the Outlook transporter
const transporter = nodemailer.createTransport({
  host: "smtp.office365.com",
  port: 587,
  secure: false,
  auth: {
    user: process.env.EMAIL_USER,
    pass: process.env.EMAIL_PASS,
  },
  tls: {
    ciphers: "SSLv3",
  },
});

// Test email function
async function sendTestEmail() {
  try {
    const info = await transporter.sendMail({
      from: `"CeMAP QuizBreak" <${process.env.EMAIL_USER}>`,
      to: "yourpersonalemail@example.com", // üëà Replace with your own address
      subject: "‚úÖ Test Email from CeMAP QuizBreak",
      text: "Hello! This is a successful test email sent automatically from Replit using Outlook SMTP.",
    });

    console.log("‚úÖ Email sent successfully!");
    console.log("Message ID:", info.messageId);
  } catch (error) {
    console.error("‚ùå Failed to send email:", error);
  }
}

sendTestEmail();